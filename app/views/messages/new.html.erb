<div class = 'text-center'>
  <h1>Tin nhắn mới</h1>
</div>
<div class='col-md-6 col-md-offset-3'>
  <%= form_for @message do |f| %>
    <div class="form-group">
     <%= hidden_field_tag :sender, current_user.email_address %>
    </div>
    <div class="form-group">
      <%= f.label :receiver %>
      <%= f.text_field :receiver, placeholder: "Email người nhận", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :subject %>
      <%= f.text_field :subject, placeholder: "Tiêu đề", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, placeholder: "Nội dung",
        class: "form-control" %>
    </div>
    <div class="text-center">
      <%= f.submit "Gửi", class: "btn btn-info col-lg-12" %>
    </div>
  <% end %>
</div>
